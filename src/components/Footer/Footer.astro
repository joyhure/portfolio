---
import Logo from '../Logo.astro';
import SocialIcons from '../SocialIcons.astro';
import './Footer.css';
---

<footer>
	<div class="footer__container">
		<Logo name="Joy Huré" />
		<SocialIcons width="23" height="23" />
	</div>
	<div class="copyright">
		<iconify-icon
							icon="noto:copyright"
							width="27"
							height="27"
							style="color: #ffffff"></iconify-icon>
							<span>2024 Joy Huré</span>
	</div>

	<aside class="footer__links">
		<ul class="ul-contact">
			<li>
				<a class="footer__link" href="mailto:joy.hure@gmail.com"
					><span
						><iconify-icon
							icon="line-md:email-twotone"
							width="27"
							height="27"
							style="color: #dcd8fc"></iconify-icon></span
					>jhure.dev@gmail.com</a>
			</li>
			<li>
				<a class="footer__link"
                href="https://github.com/joyhure"
                target="_blank"
                rel="nofollow noreferrer noopener"
					><span
						><iconify-icon
							icon="line-md:github-loop"
							width="27"
							height="27"
							style="color: #dcd8fc"></iconify-icon></span
					>@Joy</a>
			</li>
		</ul>
	</aside>
</footer>
