---
import Title from './atoms/Title.astro';
import { getCollection } from 'astro:content';
import BTSCards from './BTSCards.astro';

// Récupérez et triez les pages BTS par position
const btspages = (await getCollection('bts')).sort((a, b) => a.data.position - b.data.position);
---

<section
	id="exam"
	class="flex flex-col items-center w-full h-full md:max-w-full justify-center flex-wrap px-4"
>
	<div class="exam__container">
		<Title margin="2rem" contenu="BTS SIO SLAM" />
		<div
			class="btscards__container"
		>
			{
				btspages.slice(0, 3).map((btspage) => (
					<BTSCards
						title={btspage.data.title}
						content={btspage.data.description}
						img={btspage.data.heroImage}
						href={`/bts/${btspage.slug}/`}
					>
					</BTSCards>
				))
			}
		</div>
	</div>
</section>

<style>
	.exam__container {
		max-width: var(--max-width);
		display: flex;
		justify-content: space-between;
		flex-wrap: wrap;
		margin: 5rem auto;
	}
	section {
		margin-bottom: 5rem;
	}

	.btscards__container {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 3rem;
		width: 100%;
		max-width: 1371px;
	}
</style>
