---
import Title from './atoms/Title.astro';
import { getCollection } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import CardBlog from './CardBlog.astro';
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<section
	id="exam"
	class="flex flex-col items-center w-full h-full md:max-w-full justify-center flex-wrap px-4"
>
	<div class="exam__container">
		<Title margin="2rem" contenu="BTS SIO SLAM" />
		<div
			class="flex self-center gap-[20px] justify-center min-w-[30rem] md:max-w-full flex-wrap flex-col md:flex-row"
		>
			{
				posts.slice(0, 3).map((post) => (
					<CardBlog
						title={post.data.title}
						content={post.data.description}
						img={post.data.heroImage}
						href={`/blog/${post.slug}/`}
					>
						<FormattedDate
							slot="date"
							clase="text-white"
							date={post.data.pubDate}
						/>
					</CardBlog>
				))
			}
		</div>
	</div>
</section>

<style>
	.exam__container {
		max-width: var(--max-width);
		display: flex;
		justify-content: space-between;
		flex-wrap: wrap;
		margin: 5rem auto;
	}
	section {
		margin-bottom: 5rem;
	}
</style>
