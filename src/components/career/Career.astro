---
import Title from '../atoms/Title.astro';
import Timeline from './components/timeline.tsx';
import './career.css';
import TimelineApp from '../career/TimelineApp.tsx';

const base = import.meta.env.BASE_URL;
---

<section id="career" class="career">
	<div class="career__container">
		<div class="career__content">
			<Title margin="1rem" contenu="Mon Parcours" />
			<div id="timeline-root"></div> <!--Conteneur pour le composant React -->
			<TimelineApp client:only="react" />
		</div>
		<img
			class="about__img"
			src={`${base}img/parcours.gif`}
			alt="Image à propos Joy Huré"
		/>
	</div>
</section>



