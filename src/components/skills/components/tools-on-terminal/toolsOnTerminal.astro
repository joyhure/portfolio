---
import TerminalIcon from '../../atoms/terminal-icon/TerminalIcon.astro';
import Terminal from '../terminal/Terminal.astro';
import './tools-on-terminal.css';
---

<Terminal nombre="joyH">
	<div class="terminal__tools">
		<h2>Outils & Logiciels</h2>
		<div class="terminal__tools__container">
			<TerminalIcon
				src="/assets/vscode.svg"
				color="#0090FF"
				name="VS Code"
			/>
			<TerminalIcon
				src="/assets/github.svg"
				color="#E8E8E8"
				name="Github"
			/>
			<TerminalIcon
				src="/assets/windows.svg"
				color="#0090FF"
				name="Windows"
			/>
			<TerminalIcon src="/assets/ubuntu.svg" color="#F76B15" name="Ubuntu" />
			<TerminalIcon src="/assets/chatgpt.svg" color="#FBFEFD" name="ChatGPT" />
			<TerminalIcon
				src="/assets/notion.svg"
				color="#FCFCFC"
				name="Notion"
			/>
		</div>
	</div>
</Terminal>
