---
const {width, height} = Astro.props;
const socialLinks = [
	{
		title: 'LinkedIn',
		icon: 'line-md:linkedin',
		href: 'https://www.linkedin.com/in/joy-hur√©-8223ab62',

	},

	{
		title: 'CV',
		icon: 'ph:read-cv-logo-bold',
		href: '../docs/cv_joy.pdf',

	},

];
---

<div class="icons__container">
    {
        socialLinks.map((data) => (
            <a
                href={data.href}
                target="_blank"
                rel="nofollow noreferrer noopener"
            >
                <iconify-icon
					class=`skill__icon ${data.title}`
                    icon={data.icon}
                    width={width}
                    height={height}
                />
            </a>
        ))
    }
</div>

<style>
	.icons__container {
	display: flex;
    width: 25%;
    height: 25%;
    justify-content: flex-start;
    align-items: center;
    gap: 2rem;
    padding-inline: 0.5rem;
}
.skill__icon{
	color:#dcd8fc;
}

	.LinkedIn:hover{
		color: #0e76a8;
	}
	
	.CV:hover{
		color:#8e64ff;
	}



</style>