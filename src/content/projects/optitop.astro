---
import '../../styles/global.css';

const base = import.meta.env.BASE_URL;
---

<div id="optitop-container" class="pdf-content">
    <iframe id="optitop" src={`${base}docs/Optitop_portfolio.pdf`}></iframe>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const hash = window.location.hash;
        const base = `${import.meta.env.BASE_URL || '/'}`;
        
        if (hash.startsWith('#optitop-page-')) {
            const page = hash.split('-')[2];
            const iframe = document.getElementById('optitop') as HTMLIFrameElement;
            if (iframe && page) {
                iframe.src = `${base}docs/Optitop_portfolio.pdf#page=${page}`;
                const optitopContainer = document.getElementById('optitop-container');
                if (optitopContainer) {
                    optitopContainer.scrollIntoView({ behavior: 'smooth' });
                }
            }
        }
    });
</script>

<style>
	iframe {
		width: 750px;
		height: 1040px;
		border: none;
	}
	.pdf-content {
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		gap: 2rem;
		padding: 2rem 2rem;
	}
	.text {
		width: 40%;
		margin-inline: 2rem;
		padding-top: 8rem;
	}

	li {
		font-size: var(--text-medium);
		margin-bottom: 1.5rem;
		color: #c2e6ff;
	}

	.text-center {
		display: none;
	}

    .project_container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }

	#optitop-container {
		padding: 10rem 2rem;
	}

</style>
