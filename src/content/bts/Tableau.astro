        border-radius: 10px;
        overflow: hidden;
	}

	section {
		margin-bottom: 5rem;
		width: 100%;
	}

	table {
		width: 100%;
		border-collapse: collapse;
		border-radius: 10px;
		overflow: hidden;
		border: none;
	}

	/*wrappers*/
	th,
	td {
		border: 1px solid #54346B;
        padding: 10px;
        text-align: left;
	}
	
	th {
		background-color: #f2f2f2;
		vertical-align: middle;
		text-align: center;
		padding: 10px;
		font-weight: bold;
		
	}

  td{
    color: #f2f2f2;
	padding: 10px;
	text-align: left;
	background-color: #ECD9FA;
	color: #131313;
  }

  .diagonal-cell {
        position: relative;
        width: 25rem;
        height: auto;
    }

	.diagonal-cell::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top right, transparent 49.75%, #54346B 49.9%, #54346B 50.1%, transparent 50.25%);
        z-index: 1;
    }

    .diagonal-cell .top-right,
    .diagonal-cell .bottom-left {
        position: absolute;
        width: 50%;
        height: 50%;
        z-index: 2;
		display: flex;
        align-items: center;
        justify-content: center;
    }

    .diagonal-cell .top-right {
        top: 0;
        right: 0;
    }

    .diagonal-cell .bottom-left {
        bottom: 0;
        left: 0;
    }

	.periode {
		width: 12rem;

	}

	.case {
		width: 120px;
	}

	/*utils*/
	 /* Enlever les bordures extérieures */
	 table tr:first-child th {
        border-top: none;
    }
    table tr:last-child td {
        border-bottom: none;
    }
    table tr td:first-child,
    table tr th:first-child {
        border-left: none;
    }
    table tr td:last-child,
    table tr th:last-child {
        border-right: none;
    }
	.titles {
		background-color: #131313;
		color: #E2DDFE;
		font-size: 1.3rem;
	}
	.subtitle {
		background-color: #54346B;
		color: #E2DDFE;
		font-size: 1.3rem;
	}

	/* Shadows */
    th 
	{
        box-shadow: inset 0 3px 4px rgba(0, 0, 0, 0.2);
    }

    td {
        box-shadow: inset 0 3px 4px rgba(0, 0, 0, 0.1);
    }
	

</style>
